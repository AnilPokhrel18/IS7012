@page
@model RecruitCatsharm2al.Pages.Companies.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Company</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Company.IndustryId" class="control-label"></label>
                <select asp-for="Company.IndustryId" class="form-control" asp-items="ViewBag.IndustryId"></select>
                <span asp-validation-for="Company.IndustryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.Name" class="control-label"></label>
                <input asp-for="Company.Name" class="form-control" />
                <span asp-validation-for="Company.Name" class="text-dangr"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.MinSalary" class="control-label"></label>
                <input asp-for="Company.MinSalary" class="form-control" />
                <span asp-validation-for="Company.MinSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.MaxSalary" class="control-label"></label>
                <input asp-for="Company.MaxSalary" class="form-control" />
                <span asp-validation-for="Company.MaxSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.StartDate" class="control-label"></label>
                <input asp-for="Company.StartDate" class="form-control" />
                <span asp-validation-for="Company.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.Id" class="control-label"></label>
                <input asp-for="Company.Id" class="form-control" />
                <span asp-validation-for="Company.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.Location" class="control-label"></label>
                <textarea asp-for="Company.Location" class="form-control"></textarea>
                <span asp-validation-for="Company.Location" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Company.Id" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Company.GreenInitiative" /> @Html.DisplayNameFor(model => model.Company.GreenInitiative)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Company.OpenPositin" /> @Html.DisplayNameFor(model => model.Company.OpenPositin)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Company.JobTitleId" class="control-label"></label>
                <select asp-for="Company.JobTitleId" class="form-control" asp-items="ViewBag.JobTitleId"></select>
                <span asp-validation-for="Company.JobTitleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
