@page
@model RecruitCatsharm2al.Pages.Companies.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Company Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Industry)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Industry.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MinSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MinSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MaxSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MaxSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.GreenInitiative)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.GreenInitiative)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.JobTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.JobTitle.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.OpenPositin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.OpenPositin)
        </dd>
    </dl>
</div>
@if (Model.Company.CandidateIds.Any())
{
    <div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.CandidateIds[0].First)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.CandidateIds[0].Last)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.CandidateIds[0].TargetSalary)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.CandidateIds[0].StartDate)
                    </th>
                  
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Company.CandidateIds)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.First)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Last)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TargetSalary)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        
                        <td>
                            <a asp-page="/Candidates/Details" asp-route-id="@item.Id">Details</a>
                        </td>
                    </tr>
}
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning"> No candidates exist for this company</div>
}
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Company.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
