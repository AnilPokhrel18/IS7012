@page
@model RecruitCatsharm2al.Pages.Industries.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Industry</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Industry.Name" class="control-label"></label>
                <input asp-for="Industry.Name" class="form-control" />
                <span asp-validation-for="Industry.Name" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Industry.Id" />
            <div class="form-group">
                <label asp-for="Industry.Type" class="control-label"></label>
                <textarea asp-for="Industry.Type" class="form-control"></textarea>
                <span asp-validation-for="Industry.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Industry.GlobalRank" class="control-label"></label>
                <input asp-for="Industry.GlobalRank" class="form-control" />
                <span asp-validation-for="Industry.GlobalRank" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Industry.Genesis" class="control-label"></label>
                <input asp-for="Industry.Genesis" class="form-control" />
                <span asp-validation-for="Industry.Genesis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
